<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.training.jobify">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.SEND_SMS"/>
    <uses-permission android:name="android.permission.READ_SMS"/>
    <uses-permission android:name="android.permission.RECEIVE_SMS"/>

    <application
        android:allowBackup="true"
        android:icon="@mipmap/my_icon"
        android:label="@string/app_name"
        android:networkSecurityConfig="@xml/network_security_config"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme"
        android:usesCleartextTraffic="true"

        android:windowSoftInputMode="adjustPan|adjustResize">
        <activity android:name="com.training.jobifi.SignIn"></activity>
        <activity
            android:name=".SignIn"
            android:label="@string/title_activity_sign_in"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity android:name="com.training.jobifi.checkact" />
        <activity android:name="com.training.jobifi.activity.BookSuccess" />
        <activity android:name="com.training.jobifi.activity.DetailsActivity" />
        <activity android:name="com.training.jobifi.activity.WorkActivity" />
        <activity android:name="com.training.jobifi.activity.DashboardActivity" />
        <activity android:name="com.training.jobifi.activity.VerifyOtp" />
        <activity
            android:name="com.training.jobifi.activity.BasicInfo"
            android:label="@string/title_activity_basic_info"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity android:name="com.training.jobifi.activity.Splash">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.training.jobifi.activity.RegisterActivity"
            android:theme="@style/AppTheme"
            android:windowSoftInputMode="adjustPan" />

        <meta-data
            android:name="preloaded_fonts"
            android:resource="@array/preloaded_fonts" />
    </application>

</manifest>