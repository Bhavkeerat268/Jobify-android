<?xml version="1.0" encoding="utf-8"?>
<com.amar.library.ui.StickyScrollView android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:stickyHeader="@id/view2"
    app:stickyFooter="@id/btnNext"
    android:background="@drawable/bge"

    >
<LinearLayout
    android:alpha="0.9"
    android:id="@+id/basicInfoLayout"
    android:layout_marginTop="30sp"

    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    android:orientation="vertical"
    tools:context="com.training.jobifi.activity.BasicInfo">


    <LinearLayout
        android:layout_marginTop="30sp"
        android:id="@+id/view2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20sp"
        android:layout_marginRight="20sp"
        android:background="@drawable/container"

        android:layout_marginBottom="10sp"
android:orientation="vertical"
        android:gravity="center">



            <ImageView
                android:layout_marginTop="25sp"
                android:id="@+id/logo"
                android:layout_width="80sp"
                android:layout_height="80sp"
                android:layout_gravity="center"
                android:scaleType="centerCrop"
                android:src="@drawable/logonew"
                android:transitionName="imageAnim" />

        <TextView
          android:gravity="center"
            android:id="@+id/txtWelcome"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="30sp"
            android:fontFamily="@font/montserrat"
            android:text="Hi,User"
            android:textColor="#000"
            android:textSize="20sp"

            android:textStyle="bold" />
        <TextView
            android:gravity="center_horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            android:fontFamily="@font/montserrat"
            android:text="Please enter further details to continue "
            android:textSize="13sp"
            android:layout_marginBottom="20sp"

            android:textStyle="bold" />

    </LinearLayout>

    <LinearLayout

        android:paddingLeft="7sp"
        android:paddingRight="7sp"
        android:paddingTop="13sp"
        android:paddingBottom="13sp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20sp"
        android:layout_marginRight="20sp"
        android:layout_marginBottom="20sp"
        android:background="@drawable/container"
        android:orientation="vertical">





        <com.google.android.material.textfield.TextInputLayout
app:hintEnabled="false"
            android:id="@+id/tilGender"
            style="@style/OutlinedDrop"
            android:layout_width="match_parent"
            android:layout_height="60sp"

            android:layout_marginLeft="20sp"
            android:layout_marginRight="20sp">

            <AutoCompleteTextView

                android:background="#fff"
                android:id="@+id/actvGender"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:completionThreshold="1"
                android:drawableStart="@drawable/ic_gender"

                android:drawablePadding="5sp"
                android:drawableTint="#000"
                android:hint="Gender"
                android:padding="10sp" />
        </com.google.android.material.textfield.TextInputLayout>


        <com.google.android.material.textfield.TextInputLayout

app:hintEnabled="false"
            android:id="@+id/tilCity"
            style="@style/OutlinedDrop"
            android:layout_width="match_parent"
            android:layout_height="60sp"
            android:layout_marginLeft="20sp"
            android:layout_marginTop="10sp"
            android:layout_marginRight="20sp">


            <AutoCompleteTextView
android:background="#fff"
                android:id="@+id/actvCity"
                android:completionThreshold="1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:drawableStart="@drawable/city_drawable"
                android:drawablePadding="5sp"
                android:padding="3sp"
                android:drawableTint="#000"
                android:hint="City." />

        </com.google.android.material.textfield.TextInputLayout>


        <com.google.android.material.textfield.TextInputLayout
app:hintEnabled="false"
            android:id="@+id/etDOB"
            style="@style/LoginTextInputLayoutStyle"
android:background="#fff"
            android:layout_width="match_parent"
            android:layout_height="50sp"
            android:layout_marginLeft="20sp"
            android:layout_marginTop="10sp"



            android:layout_marginRight="20sp">

            <com.google.android.material.textfield.TextInputEditText
                android:background="#fff"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:drawableStart="@drawable/dob"
                android:drawablePadding="5sp"
                android:drawableTint="#000"
                android:hint="Date of birth"
                android:padding="3sp" />
        </com.google.android.material.textfield.TextInputLayout>
        <com.google.android.material.textfield.TextInputLayout


            android:id="@+id/tilShift"
            style="@style/OutlinedDrop"
            app:hintEnabled="false"
            android:layout_width="match_parent"
            android:layout_height="60sp"
            android:layout_marginLeft="20sp"
            android:layout_marginTop="10sp"

            android:layout_marginRight="20sp">


            <AutoCompleteTextView
                android:background="#fff"
                android:id="@+id/actvShift"
                android:completionThreshold="1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:drawableStart="@drawable/city_drawable"
                android:drawablePadding="5sp"
                android:padding="3sp"
                android:drawableTint="#000"
                android:hint="Shift" />

        </com.google.android.material.textfield.TextInputLayout>





    </LinearLayout>
    <Button

        android:layout_gravity="bottom"
        android:layout_marginBottom="300sp"
        android:id="@+id/btnNext"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20sp"

        android:layout_marginRight="20sp"
        android:background="@drawable/button_circular"
        android:fontFamily="@font/montserrat"
        android:text="NEXT"
        android:textColor="#fff"
        android:textSize="20sp" />





</LinearLayout>

</com.amar.library.ui.StickyScrollView>
