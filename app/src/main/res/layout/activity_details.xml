<?xml version="1.0" encoding="utf-8"?>

<ScrollView xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@drawable/paintblur"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_height="match_parent"
    android:layout_width="match_parent">
    xmlns:android="http://schemas.android.com/apk/res/android" >
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"

    android:layout_width="match_parent"

    android:layout_height="match_parent"
    tools:context="com.training.jobifi.activity.DetailsActivity">
    <androidx.cardview.widget.CardView app:cardElevation="7sp"
        android:transitionName="icon"
        android:layout_marginTop="40sp"

        android:id="@+id/itemlayout"
android:layout_marginLeft="15sp"
        android:layout_marginRight="15sp"
        android:layout_height="250sp"
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        xmlns:app="http://schemas.android.com/apk/res-auto">
        <RelativeLayout android:layout_width="match_parent"




            android:layout_height="match_parent">



            <RelativeLayout


                android:id="@+id/imgLayout"

                android:layout_width="match_parent"
                android:layout_height="190sp">

                <androidx.cardview.widget.CardView

                    android:layout_margin="10sp"
                    android:background="@color/appLightBlue"
                    app:cardCornerRadius="5sp"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">
                    <ImageView


                        android:id="@+id/imgJob"
                        android:scaleType="fitXY"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent" />

                    <ProgressBar
                        android:id="@+id/progressImg"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"/>
                </androidx.cardview.widget.CardView>

            </RelativeLayout>
            <RelativeLayout

                android:background="#fff"
                android:layout_below="@id/imgLayout"
                android:layout_width="match_parent"
                android:layout_height="60sp">
                <androidx.cardview.widget.CardView
                    android:layout_centerVertical="true"
                    android:id="@+id/userImg"
                    android:layout_width="40sp"
                    android:layout_height="40sp"
                    app:cardElevation="1sp"
                    app:cardCornerRadius="120sp"
                    android:layout_marginLeft="10sp"



                    >

                    <ImageView

                        android:layout_width="match_parent"
                        android:layout_height="match_parent"

                        android:scaleType="centerCrop"
                        android:src="@drawable/logonew" />
                </androidx.cardview.widget.CardView>
                <TextView


                    android:layout_marginLeft="7sp"
                    android:id="@+id/jobName"
                    android:textColor="#000"
                    android:layout_marginTop="7sp"

                    android:fontFamily="@font/muli_bold"
                    android:textSize="20sp"
                    android:layout_toRightOf="@id/userImg"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Job Name"/>
                <TextView
                    android:layout_marginLeft="7sp"
                    android:id="@+id/jobUser"
                    android:layout_toRightOf="@id/userImg"
                    android:text="Provider'name"
                    android:layout_below="@id/jobName"
                    android:fontFamily="@font/montserrat"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
                <TextView
                    android:layout_toRightOf="@id/jobUser"
                    android:text="City"
                    android:layout_marginLeft="10sp"
                    android:layout_below="@id/jobName"
                    android:id="@+id/jobLocation"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>


            </RelativeLayout>

        </RelativeLayout>
    </androidx.cardview.widget.CardView>

    <RelativeLayout
        android:id="@+id/descLayout"
        android:alpha="0.8"
        android:layout_marginLeft="15sp"
        android:layout_marginRight="15sp"

        android:layout_below="@id/itemlayout"

        android:layout_width="match_parent"
        android:layout_height="wrap_content">
    <androidx.cardview.widget.CardView


        android:layout_width="match_parent"
        android:layout_height="wrap_content">

<RelativeLayout
    android:layout_margin="15sp"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <RelativeLayout
        android:id="@+id/genderlayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:fontFamily="@font/montserrat"
            android:drawableStart="@drawable/ic_gender"
            android:drawablePadding="5sp"
            android:id="@+id/cgender"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="10sp"
            android:text="Gender preference"
            android:textColor="#000"
            android:textSize="20sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/gendercontainer"
            android:layout_toRightOf="@id/cgender"
            android:textColor="@color/ColorRed"
            android:layout_margin="10sp"
            android:text="Male"

            android:textSize="20sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
    </RelativeLayout>
    <RelativeLayout
        android:layout_below="@id/genderlayout"
        android:id="@+id/timelayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView  android:fontFamily="@font/montserrat"
            android:drawableStart="@drawable/ic_baseline_access_time_24"
            android:drawablePadding="5sp"
            android:id="@+id/cTime"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="10sp"
            android:text="Timings"
            android:textColor="#000"
            android:textSize="20sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/timecontainer"
            android:layout_toRightOf="@id/cTime"
            android:textColor="@color/ColorRed"
            android:layout_margin="10sp"
            android:text="00:00"

            android:textSize="20sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
    </RelativeLayout>
    <RelativeLayout
        android:layout_below="@+id/timelayout"
        android:id="@+id/agelayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView  android:fontFamily="@font/montserrat"
            android:drawableStart="@drawable/ic_age"
            android:drawablePadding="5sp"
            android:id="@+id/cage"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="10sp"
            android:text="Age Preference"
            android:textColor="#000"
            android:textSize="20sp"
            android:textStyle="bold" />

        <TextView
            android:layout_toRightOf="@id/cage"
            android:textColor="@color/ColorRed"
            android:layout_margin="10sp"
            android:id="@+id/agecontainer"
            android:text="0 years"

            android:textSize="20sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
    </RelativeLayout>
    <RelativeLayout
        android:layout_below="@id/agelayout"
        android:id="@+id/paylayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:fontFamily="@font/montserrat"
            android:drawableStart="@drawable/ic_baseline_money_24"
            android:drawablePadding="5sp"
            android:id="@+id/cpay"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="10sp"
            android:text="Pay"
            android:textColor="#000"
            android:textSize="20sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/paycontainer"
            android:layout_toRightOf="@id/cpay"
            android:textColor="@color/ColorRed"
            android:layout_margin="10sp"
            android:text="Rs 000"

            android:textSize="20sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
    </RelativeLayout>

</RelativeLayout>
    </androidx.cardview.widget.CardView>
</RelativeLayout>

    <LinearLayout
        android:layout_marginLeft="15sp"
        android:layout_marginRight="15sp"
        android:layout_marginTop="15sp"
        android:layout_below="@id/descLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:weightSum="10">

        <Button
            android:id="@+id/dashboard"
android:text="Dashboard"
            android:textSize="13sp"
            android:textColor="#fff"
            android:paddingLeft="27sp"
            android:paddingRight="27sp"
            android:drawableEnd="@drawable/ic_baseline_cancel_presentation_24"
            android:background="@color/ColorRed"
            android:layout_width="0dp"
            android:layout_weight="5

"

            android:layout_height="50sp"
            />
        <Button
            android:id="@+id/bookSlot"
android:paddingLeft="27sp"
           android:layout_gravity="center_horizontal"
           android:drawableEnd="@drawable/ic_book"
            android:paddingRight="27sp"
            android:text="Book Slot"
            android:textColor="#fff"
            android:layout_marginLeft="10sp"
            android:background="#006241"
            android:layout_width="0dp"
            android:layout_weight="5"
            android:layout_height="50sp"
            />
    </LinearLayout>
</RelativeLayout>
</ScrollView>