<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/bge"
    tools:context="com.training.jobifi.activity.VerifyOtp"

    >
<androidx.cardview.widget.CardView

    android:alpha="0.9"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardElevation="10sp"
    app:cardCornerRadius="30sp"
    android:layout_marginTop="40sp"
    android:layout_marginLeft="15sp"
    android:layout_marginRight="15sp"
    >
<LinearLayout


    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"

    >
    <TextView

        android:layout_marginTop="40sp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Verify Otp"
        android:textColor="#DA405C"
        android:padding="5sp"
        android:textSize="38sp"
        android:textAllCaps="true"
        android:gravity="center"
        android:fontFamily="@font/muli_extralight"
        android:textStyle="bold"
        />
    <TextView
        android:id="@+id/numDesc"
        android:padding="10sp"
        android:layout_marginTop="10sp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Enter the otp sent to \n+91XXXXXXXXXX"

        android:textSize="15sp"

        android:gravity="center"

        android:fontFamily="@font/montserrat"
        android:textStyle="bold"
        />
</LinearLayout>
</androidx.cardview.widget.CardView>


    <com.chaos.view.PinView
        android:cursorVisible="true"
        android:focusable="true"
        android:inputType="number"
        android:id="@+id/otpView"

        android:focusableInTouchMode="true"
        android:itemBackground="#fff"
        android:layout_marginTop="30sp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:itemCount="6"
        android:layout_gravity="center"
        />
  <Button
      android:id="@+id/btnVerify"
      android:layout_width="match_parent"
      android:layout_margin="80sp"
      android:text="Verify"
      android:textSize="25sp"
      android:textColor="#ffff"
      android:fontFamily="@font/muli_bold"

      android:background="@drawable/button_circular"
      android:layout_height="60sp"
      android:layout_gravity="center"
     />





</LinearLayout>