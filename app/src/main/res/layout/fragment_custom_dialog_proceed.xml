<?xml version="1.0" encoding="utf-8"?>


<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"

    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context="com.training.jobifi.fragment.CustomDialogProceed">




    <LinearLayout

        android:background="@drawable/dialog_bg"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">



        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="10sp"
            android:fontFamily="@font/montserrat"
            android:text="Book Slot"
            android:textColor="#DA405C"
            android:textSize="30sp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/montserrat"
            android:padding="25sp"
            android:gravity="center"
            android:text="Are you sure you want to Continue?"
            android:textColor="#000"
            android:textSize="15sp" />
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="10sp">
<LinearLayout
    android:padding="10sp"
    android:weightSum="10"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    >
        <Button
         android:layout_weight="5"
            android:id="@+id/btnNo"

            android:layout_width="150sp"
            android:text="No"
            android:textColor="#fff"
            android:textSize="20sp"
            android:textAllCaps="false"
            android:layout_height="50sp"
            android:background="@color/ColorRed"
           />

            <Button
                android:layout_marginLeft="15sp"
                android:id="@+id/btnProceed"
                android:layout_width="150sp"
android:layout_weight="5"

                android:layout_height="50sp"
                android:layout_toRightOf="@id/btnNo"
                android:background="#006241"
                android:text="Proceed"
                android:textAllCaps="false"
                android:textColor="#fff"
                android:textSize="20sp" />
</LinearLayout>
        </RelativeLayout>
    </LinearLayout>




</RelativeLayout>
