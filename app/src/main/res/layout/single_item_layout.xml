<RelativeLayout
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_width="match_parent"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:transitionName="icon"

        android:id="@+id/itemlayout"
        android:layout_height="270sp">



        <RelativeLayout



            android:id="@+id/imgLayout"

            android:layout_width="match_parent"
            android:layout_height="190sp">

            <androidx.cardview.widget.CardView


android:background="@color/appLightBlue"

                android:layout_width="match_parent"
                android:layout_height="match_parent">
            <ImageView


                android:id="@+id/imgJob"
                android:scaleType="fitXY"
                android:layout_width="match_parent"
                android:layout_height="match_parent" />
            </androidx.cardview.widget.CardView>

        </RelativeLayout>
        <RelativeLayout
           android:id="@+id/dataarea"
android:background="@color/white"
            android:layout_below="@id/imgLayout"
            android:layout_width="match_parent"
            android:layout_height="60sp">
            <androidx.cardview.widget.CardView
               android:layout_centerVertical="true"
                android:id="@+id/userImg"
                android:layout_width="47sp"
                android:layout_height="47sp"
                app:cardElevation="1sp"
                app:cardCornerRadius="120sp"
                android:layout_marginLeft="10sp"



                >

                <ImageView

                    android:padding="5sp"

                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:scaleType="centerCrop"
                    android:src="@drawable/logonew" />
            </androidx.cardview.widget.CardView>
            <TextView
android:layout_marginTop="7sp"
                android:layout_marginLeft="7sp"
                android:id="@+id/jobName"
                android:textColor="#000"


                android:fontFamily="@font/montserrat"
                android:textSize="20sp"
                android:layout_toRightOf="@id/userImg"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Job Name"/>
            <TextView
                android:layout_marginLeft="7sp"
                android:id="@+id/jobUser"
                android:layout_toRightOf="@id/userImg"
                android:text="Provider'name"
                android:layout_below="@id/jobName"
android:fontFamily="@font/montserrat"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <TextView
                android:layout_toRightOf="@id/jobUser"
                android:text="City"
                android:layout_marginLeft="10sp"
                android:layout_below="@id/jobName"
                android:id="@+id/jobCity"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>


        </RelativeLayout>
        <LinearLayout

           android:layout_below="@id/dataarea"
            android:layout_width="match_parent"
            android:layout_height="20dp">
            <View

                android:layout_gravity="center_vertical"
                android:background="#999"
                android:layout_width="match_parent"
                android:layout_height="0.3dp"/>
        </LinearLayout>


    </RelativeLayout>

